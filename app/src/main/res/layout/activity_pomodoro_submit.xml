<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tuionf.a24hourstimer.ui.PomodoroSubmitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/pomodoro_name_et"
            android:layout_weight="0.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="你刚刚完成了什么工作？"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/pomodoro_submit_btn"
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@mipmap/pomodoro_submit_false"/>

    </LinearLayout>

</RelativeLayout>
